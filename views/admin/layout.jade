doctype 5
html
    head
        meta(charset="utf-8")
        title #{config.name}
        meta(name="description",content="#{config.description}")
        meta(name="keywords",content="#{config.keywords}")
        link(rel='stylesheet', href='/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/bootstrap-responsive.min.css')
        link(rel='stylesheet', href='/css/admin.css')
        link(rel='stylesheet', href='/uploadify/uploadify.css')
        script(src="/js/jquery.js", type="text/javascript")
        script(src="/js/bootstrap.min.js", type="text/javascript")
        script(src="/uploadify/jquery.uploadify.js")
        script(src="/js/common.js", type="text/javascript")
    body
        .navbar.navbar-inverse.navbar-fixed-top
            .navbar-inner
                .container-fluid
                    a.brand(href="/admin") #{config.name}
                    .nav-collapse.collapse
                        ul.nav
                            li.active
                                a(href="/admin") 管理中心
                            li
                                a(href="/",target="_blank") 前台首页
                        ul.nav.pull-right
                            li
                                a.dropdown-toggle(data-toggle="dropdown",href="#") 
                                    | 你好，#{User.name}
                                    b.caret
                                ul.dropdown-menu
                                    li
                                        a(href="/admin/logout")
                                            i.icon-lock
                                            | 退出登录
        .container-fluid.vi-layout
            .row-fluid
                .span2
                    ul.nav.nav-list.bs-docs-sidenav
                        li.nav-header 用户面板
                        li
                            a(href="#") 产品管理
                            ul.sub-nav
                                li
                                    a(href="/admin/product-cat-list") 产品分类
                                li
                                    a(href="/admin/product-list") 产品列表
                        li
                            a(href="#") 文章管理
                            ul.sub-nav
                                li
                                    a(href="/admin/article-cat-list") 文章分类
                                li
                                    a(href="/admin/article-list") 文章列表
                        li
                            a(href="#") 单页管理
                            ul.sub-nav
                                li
                                    a(href="/admin/page-list") 页面列表
                        li
                            a(href="#") 用户管理
                            ul.sub-nav
                                li
                                    a(href="/admin/user-list") 用户列表
                        li
                            a(href="#") 其他管理
                            ul.sub-nav
                                li
                                    a(href="/admin/message-list") 留言
                                li
                                    a(href="/admin/friendlink") 友情链接
                                li
                                    a(href="/admin/") 数据管理
                block content