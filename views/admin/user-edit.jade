extends layout

block content
    .span10
        .page-title
            .opts
                h3=title
        .alert.alert-succee.fade.in
            button.close(type="button",data-dismiss="alert") &times;
            | #{info}
        form.form-horizontal(action="/admin/user-update/#{Userthis._id}",method="post",accept-charset="utf-8")
            .control-group
                label.control-label 用户名
                .controls
                    input(type="text",placeholder="#{Userthis.name}",disabled)
            .control-group
                label.control-label 密码
                .controls
                    input(type="password",placeholder="密码",name="password")
            .control-group
                label.control-label 确认密码
                .controls
                    input(type="password",placeholder="确认密码",name="password_repeat")
            .control-group
                .controls
                    button.btn(type="submit") 确定