extends layout

block content
    .span10
        .page-title
            .opts
                h3=title
        form.form-horizontal(action="/admin/product-update/#{Product._id}",enctype="multipart/form-data",method="post",accept-charset="utf-8")
            .control-group
                label.control-label 产品分类
                .controls
                    select(name="cat_id")
                        each item in ProductCats
                            option(value="#{item._id}") #{item.name}
            .control-group
                label.control-label 产品标题
                .controls
                    input(type="text",placeholder="#{Product.title}",name="title",value="#{Product.title}")
            .control-group
                label.control-label 产品简介
                .controls
                    input(type="text",placeholder="#{Product.content}",name="content",value="#{Product.content}")
            .control-group
                label.control-label 产品价格
                .controls
                    input(type="text",placeholder="#{Product.price}",name="price",value="#{Product.price}")
            .control-group
                label.control-label 产品图片
                .controls
                    input.file_img(type="text", name="file_img",value="#{Product.img},",style="display:none;")
                    div#img_box.img
                        - if ( Product.img.length )
                            - Product.img.forEach(function(item){
                                img(src=item, style="width: 100px; height: 100px;")
                            - })
                    input#file_upload(type="file", name="file_upload")
            .control-group
                .controls
                    button.btn(type="submit") 确定