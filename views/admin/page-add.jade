extends layout

block content
    .span10
        .page-title
            .opts
                h3=title
        form.form-horizontal(action="/admin/page-add",method="post",accept-charset="utf-8")
            .control-group
                label.control-label 名称
                .controls
                    input(type="text",placeholder="名称",name="name")
            .control-group
                label.control-label 内容
                .controls
                    input(type="text",placeholder="内容",name="content")
            .control-group
                label.control-label URL
                .controls
                    input(type="text",placeholder="URL",name="url")
            .control-group
                .controls
                    button.btn(type="submit") 确定